{
  "name": "gb-hardware-db",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -r build",
    "ts:build": "tsc --build .",
    "html:build": "node build/scripts/builder/builder.js",
    "css:build": "node-sass src/site/gbhwdb.scss | postcss -o build/site/static/gbhwdb.css",
    "build": "npm run ts:build && npm run html:build && npm run css:build",
    "start": "npm run build && (node devserver & wait)"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.35",
    "@types/csv-stringify": "^3.1.0",
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^14.17.0",
    "@types/ramda": "^0.27.40",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@types/source-map-support": "^0.5.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "autoprefixer": "^10.2.5",
    "bluebird": "^3.7.2",
    "cssnano": "^5.0.4",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "node-sass": "^6.0.0",
    "nodemon": "^2.0.7",
    "normalize.css": "^8.0.1",
    "postcss-cli": "^8.3.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.0",
    "source-map-support": "^0.5.19",
    "typescript": "^4.2.4",
    "winston": "^3.3.3"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "csv-stringify": "^5.6.2",
    "human-date": "^1.4.0",
    "postcss": "^8.3.0",
    "ramda": "^0.27.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^6.0.2",
    "url-slug": "^3.0.2"
  },
  "browserslist": [
    "> 10%",
    "Firefox ESR",
    "Chrome >= 33"
  ],
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "postcss": {
    "plugins": {
      "cssnano": true,
      "postcss-preset-env": true
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "no-inner-declarations": "off",
      "react/display-name": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-namespace": "off",
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "typedefs": false
        }
      ],
      "@typescript-eslint/member-delimiter-style": [
        "warn",
        {
          "multiline": {
            "delimiter": "none"
          },
          "singleline": {
            "delimiter": "semi",
            "requireLast": false
          }
        }
      ],
      "@typescript-eslint/unbound-method": "off"
    }
  }
}
